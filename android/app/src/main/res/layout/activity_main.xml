<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="dirtybro.stooler.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:background="@color/colorTabBar"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STOOLER"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorTabBar"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:id="@+id/issue_layout"
            android:gravity="center"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/issue_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="이슈"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/issue_check_view"
                android:layout_gravity="center"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/main_check_view_shape"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="12dp"
            android:id="@+id/calendar_layout"
            android:gravity="center"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/calendar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@android:color/transparent"
                android:text="캘린더"
                android:textSize="18dp"
                android:textStyle="bold" />

            <View
                android:id="@+id/calendar_check_view"
                android:layout_gravity="center"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/main_check_view_shape"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setting_layout"
            android:gravity="center"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:id="@+id/setting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="설정"
                android:textSize="18dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/setting_check_view"
                android:layout_gravity="center"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/main_check_view_shape"/>

        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
